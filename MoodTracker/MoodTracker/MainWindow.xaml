<Window x:Class="MoodTracker.MainWindow"
        x:Name="MainWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MoodTracker.Controls"
        xmlns:viewmodels="clr-namespace:MoodTracker.ViewModels"
        xmlns:views="clr-namespace:MoodTracker.View"
        Title="MoodTracker"
        Width="1180" Height="720"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <!-- 加载动画 -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3" />
                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                       From="0,20,0,0" To="0,0,0,0"
                                       Duration="0:0:0.5" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border Background="{DynamicResource ContainerGlow}" CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 左侧区域 + SideNav -->
            <Grid Grid.Column="0" Width="{Binding ActualWidth, ElementName=SideNavControl}">
                <!-- 装饰性斜纹背景 -->
                <Border Opacity="0.1" Margin="0,20,0,20">
                    <Border.Background>
                        <DrawingBrush TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute">
                            <DrawingBrush.Drawing>
                                <GeometryDrawing Brush="White">
                                    <GeometryDrawing.Geometry>
                                        <PathGeometry Figures="M0,10 L10,0" />
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Border.Background>
                </Border>

                <!-- 左侧导航栏控件 -->
                <controls:SideNav DataContext="{Binding}"
                                  x:Name="SideNavControl"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Left"
                                  Margin="10,20,0,20"
                                  NavigationRequested="SideNav_NavigationRequested" />
            </Grid>

            <!-- 主内容区域 -->
            <Border Grid.Column="1"
                    Background="{DynamicResource ContentBaseBrush}"
                    CornerRadius="20"
                    Margin="0"
                    BorderBrush="#30324A"
                    BorderThickness="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <!-- 顶部标题栏 -->
                        <RowDefinition Height="Auto" />
                        <!-- 装饰 -->
                        <RowDefinition Height="1" />
                        <!-- Page切换 -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- 顶部标题栏按钮 -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0"
                                VerticalAlignment="Top">

                        <!-- 搜索区域 -->
                        <StackPanel Orientation="Vertical"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center"
                                    Width="265">
                            <!-- 搜索框 -->
                            <Grid Width="240" Height="32">
                                <Border CornerRadius="16"
                                        Background="{DynamicResource LightAccentBrush}"
                                        Height="32"
                                        VerticalAlignment="Center"
                                        x:Name="SearchBorder">
                                    <Grid Margin="10,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Image Source="{DynamicResource SearchIcon}"
                                               Width="16" Height="16"
                                               VerticalAlignment="Center" />
                                        <TextBox x:Name="SearchBox"
                                                 Grid.Column="1"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 FontSize="14"
                                                 VerticalContentAlignment="Center"
                                                 Padding="6,0"
                                                 Foreground="{DynamicResource TextPrimaryBrush}"
                                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                                 PreviewMouseLeftButtonDown="SearchBox_PreviewMouseLeftButtonDown"
                                                 GotFocus="SearchBox_GotFocus"
                                                 LostFocus="SearchBox_LostFocus" />
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- 搜索下拉结果 -->
                            <Popup x:Name="SearchPopup"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding ElementName=SearchBox}"
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   PopupAnimation="None"
                                   Width="240"
                                   ClipToBounds="True"
                                   IsOpen="{Binding IsSearchOpen, Mode=TwoWay}">
                                <Border Background="{DynamicResource ContentBaseBrush}"
                                        CornerRadius="8"
                                        Padding="8"
                                        Effect="{StaticResource ShadowEffect}">
                                    <ScrollViewer Background="Transparent" MaxHeight="260"
                                                  VerticalScrollBarVisibility="Auto">  
                                       <ScrollViewer.Resources>  
                                           <Style TargetType="ScrollBar">  
                                               <Setter Property="Visibility" Value="Visible" />  
                                           </Style>  
                                       </ScrollViewer.Resources>

                                        <ListBox x:Name="SearchResults"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 ItemsSource="{Binding SearchItems}"
                                                 SelectionChanged="SearchResults_SelectionChanged">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Padding" Value="4"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ListBoxItem">
                                                                <Border x:Name="Bd"
                                                                        Background="{TemplateBinding Background}"
                                                                        CornerRadius="4">
                                                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="Bd" Property="Background" Value="#22000000"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsSelected" Value="True">
                                                                        <Setter TargetName="Bd" Property="Background" Value="#44007ACC"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" FontSize="14" Padding="4"/>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>  
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </StackPanel>

                        <!-- 创建按钮 -->
                        <Button x:Name="CreateButton"
                                Margin="0,5,0,0"
                                Height="48"
                                Width="128"
                                Click="CreateButton_Click"
                                Cursor="Hand"
                                Background="Transparent"
                                BorderThickness="0"
                                Style="{StaticResource TitleBarButtonStyle}">
                            <Grid>
                                <Border x:Name="CapsuleBackground"
                                        Background="{DynamicResource LightAccentBrush}"
                                        CornerRadius="24"
                                        Height="48"
                                        HorizontalAlignment="Left"
                                        Width="112" />
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            Margin="12,0,0,0">
                                    <Image Source="{DynamicResource CreateIcon}"
                                           Width="24" Height="24" />
                                    <TextBlock Text="创建"
                                               Margin="20,0,0,0"
                                               VerticalAlignment="Center"
                                               FontSize="14"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Visibility="{Binding IsExpanded, ElementName=SideNavControl, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- 头像 -->
                        <Border Width="32" Height="32"
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                BorderThickness="1">
                            <Image Source="{StaticResource AvatarIcon}"
                                   Stretch="UniformToFill"
                                   ClipToBounds="True"
                                   Width="32" Height="32"
                                   HorizontalAlignment="Center" Margin="0,-1,0,-1">
                                <Image.Clip>
                                    <EllipseGeometry Center="16,16" RadiusX="16" RadiusY="16" />
                                </Image.Clip>
                            </Image>
                        </Border>

                        <!-- 最小化 / 关闭 -->
                        <Button Content="─"
                                Style="{StaticResource TitleBarButtonStyle}"
                                Command="{Binding MinimizeCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
                        <Button Content="✕"
                                Style="{StaticResource TitleBarButtonStyle}"
                                Command="{Binding CloseCommand}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
                    </StackPanel>

                    <!-- 装饰 -->
                    <Border Grid.Row="1"
                            Height="1"
                            Margin="40,40,40,0"
                            Background="#1E2035"
                            VerticalAlignment="Top" />

                    <!-- 页面内容 -->
                    <Frame x:Name="MainContentFrame"
                           Grid.Row="2"
                           NavigationUIVisibility="Hidden" />
                </Grid>
            </Border>
        </Grid>
    </Border>

    <!-- 窗口切换 -->

</Window>
