<Window x:Class="MoodTracker.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:MoodTracker"
        Title="MoodTracker" Height="650" Width="1100"
        Background="#F5F2E7" FontFamily="Segoe UI">
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Foreground" Value="#4B3F2F"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="10,15,10,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="622*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#E8E2D6" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="3">
            <TextBlock Text="MoodTracker" FontSize="24" FontWeight="Bold" Margin="20" Foreground="#4B3F2F"/>
            <Button Content="主页" Style="{StaticResource RoundedButtonStyle}" Background="#F5F2E7" BorderBrush="#D8A47F" BorderThickness="1"/>
            <Button Content="添加记录" Style="{StaticResource RoundedButtonStyle}" Background="#F5F2E7" BorderBrush="#D8A47F" BorderThickness="1"/>
            <Button Content="统计分析" Style="{StaticResource RoundedButtonStyle}" Background="#F5F2E7" BorderBrush="#D8A47F" BorderThickness="1"/>
            <Button Content="设置" Style="{StaticResource RoundedButtonStyle}" Background="#F5F2E7" BorderBrush="#D8A47F" BorderThickness="1"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Column="2" Margin="20,7,20,20" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="欢迎回来" FontSize="28" FontWeight="Bold" Foreground="#4B3F2F" Margin="0,0,0,20"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Add Entry Panel -->
                <Border Grid.Column="0" Margin="10" Padding="15" Background="#FBF9F4" CornerRadius="12">
                    <StackPanel>
                        <TextBlock Text="每日记录" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Foreground="#4B3F2F"/>

                        <TextBlock Text="心情：" Foreground="#6B5E4F"/>
                        <ComboBox x:Name="MoodCombo" Margin="0,0,0,10">
                            <ComboBoxItem Content="开心"/>
                            <ComboBoxItem Content="焦虑"/>
                            <ComboBoxItem Content="悲伤"/>
                            <ComboBoxItem Content="平静"/>
                        </ComboBox>

                        <TextBlock Text="备注：" Foreground="#6B5E4F"/>
                        <TextBox x:Name="NoteBox" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Background="#FFFFFF"/>

                        <TextBlock Text="歌曲：" Margin="0,10,0,2" Foreground="#6B5E4F"/>
                        <TextBox x:Name="SongBox" Background="#FFFFFF"/>

                        <Button Content="添加" Background="#D8A47F" Foreground="White" Margin="0,15,0,0"
                                Width="100" HorizontalAlignment="Left" FontWeight="Bold" />
                    </StackPanel>
                </Border>

                <!-- Mood Summary Chart -->
                <Border Grid.Column="1" Margin="10" Padding="15" Background="#FBF9F4" CornerRadius="12">
                    <StackPanel>
                        <TextBlock Text="情绪概览" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Foreground="#4B3F2F"/>
                        <Ellipse Fill="#FFA500" Width="120" Height="120" HorizontalAlignment="Center" Stroke="#FF8C00" StrokeThickness="2"/>
                        <StackPanel Margin="10,10,0,0">
                            <TextBlock Text="🟠 开心" Foreground="#E0A020"/>
                            <TextBlock Text="🟤 焦虑" Foreground="#A67873"/>
                            <TextBlock Text="🔴 悲伤" Foreground="#CC4B4B"/>
                            <TextBlock Text="🟢 平静" Foreground="#79C99E"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Song Cloud + Log -->
                <StackPanel Grid.Column="2" Margin="10">
                    <Border Padding="15" Background="#FBF9F4" CornerRadius="12" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="歌曲云" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Foreground="#4B3F2F"/>
                            <TextBlock TextWrapping="Wrap" Foreground="#4B3F2F">
                                <Run FontSize="18">微笑 </Run>
                                <Run FontSize="16">梦想 </Run>
                                <Run FontSize="20">阳光 </Run>
                                <Run FontSize="14">雨天 </Run>
                                <Run FontSize="18">爱 </Run>
                                <Run FontSize="16">告别</Run>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Padding="15" Background="#FBF9F4" CornerRadius="12">
                        <StackPanel>
                            <TextBlock Text="记录日志" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Foreground="#4B3F2F"/>
                            <StackPanel>
                                <TextBlock Text="2023/08/05 🎵 Dancing in the Moonlight" Foreground="#E0A020"/>
                                <TextBlock Text="2023/06/05 🎵 Eclipse" Foreground="#CC4B4B"/>
                                <TextBlock Text="2023/05/05 🎵 Reflection" Foreground="#79C99E"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
