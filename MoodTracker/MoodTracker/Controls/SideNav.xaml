<UserControl x:Class="MoodTracker.Controls.SideNav"
             x:Name="SideNavControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Border CornerRadius="20" 
            Margin="10" 
            Padding="10" 
            Background="Transparent"
            >
        <StackPanel>
            <!-- 汉堡菜单按钮 -->
            <ToggleButton Click="MenuButton_Click" 
                          Style="{StaticResource NavButtonStyle}" 
                          x:Name="MenuButton"
                          Height="40">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Assets/hamburger.png" Width="24" Height="24" Cursor=""/>
                    <TextBlock Text="菜单" 
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Visibility="{Binding IsExpanded, ElementName=SideNavControl, Converter={StaticResource BooleanToVisibilityConverter}}" 
                               Cursor="Hand"/>
                </StackPanel>
            </ToggleButton>

            <!-- Home 按钮 -->
            <ToggleButton Style="{StaticResource NavButtonStyle}" 
                          x:Name="HomeButton" 
                          Click="HomeButton_Click"
                          Margin="0,5,0,0" Height="48">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Assets/home.png" Width="24" Height="24"/>
                    <TextBlock Text="首页" 
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Visibility="{Binding IsExpanded, ElementName=SideNavControl, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </ToggleButton>

            <!-- 数据分析按钮 -->
            <ToggleButton Style="{StaticResource NavButtonStyle}" 
                          x:Name="AnalyticsButton" 
                          Click="AnalyticsButton_Click"
                          Margin="0,5,0,0" Height="48">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/Assets/analytics.png" Width="24" Height="24"/>
                    <TextBlock Text="数据分析" 
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Visibility="{Binding IsExpanded, ElementName=SideNavControl, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </ToggleButton>
        </StackPanel>
    </Border>
</UserControl>