<UserControl x:Class="MoodTracker.Controls.KeywordCloud"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Border CornerRadius="20" 
        Background="#23253D"  
        BorderBrush="#2D2F4A"
        BorderThickness="1"
        Padding="10"
        Effect="{StaticResource CardShadow}">
        <!-- 添加卡片投影 -->
        <StackPanel>
            <TextBlock Text="音乐关键词词云"
                   Foreground="#D0D3FF"  
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0 0 0 10"/>
        
        <WrapPanel x:Name="KeywordWrapPanel" 
                   Margin="5">
            <!-- 关键词示例样式 -->
            <Border CornerRadius="8" 
                    Background="#2C2E47"  
                    Margin="4" 
                    Padding="8,4">
                <TextBlock Text="#电子乐" 
                           Foreground="#AEB1D9"  
                           FontSize="14"/>
            </Border>
        </WrapPanel>
    </StackPanel>
</Border>
</UserControl>
