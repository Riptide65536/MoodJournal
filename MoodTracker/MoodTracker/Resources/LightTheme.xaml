<!--light主题-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--====== 基础色系（浅色） ======-->
    <Color x:Key="BaseContainer">#FFFFFF</Color>
    <Color x:Key="ContentBase">#F6F7FB</Color>
    <Color x:Key="AccentViolet">#6F51A3</Color>

    <SolidColorBrush x:Key="BaseContainerBrush" Color="{StaticResource BaseContainer}" />
    <SolidColorBrush x:Key="ContentBaseBrush" Color="{StaticResource ContentBase}" />
    <SolidColorBrush x:Key="AccentVioletBrush" Color="{StaticResource AccentViolet}" />

    <!--====== 渐变背景：柔和融合层次感 ======-->
    <LinearGradientBrush x:Key="ContainerGlow" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#EEF0F9" Offset="0"/>
        <GradientStop Color="{StaticResource BaseContainer}" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ContentSurface" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F3F5FA" Offset="0"/>
        <GradientStop Color="#E8EBF5" Offset="1"/>
    </LinearGradientBrush>

    <!--====== 动态效果颜色（hover/点击） ======-->
    <Color x:Key="HoverGlow">#302B4A20</Color>
    <SolidColorBrush x:Key="HoverGlowBrush" Color="{StaticResource HoverGlow}" />

    <!--====== 左侧导航栏 ======-->
    <SolidColorBrush x:Key="NavTextDefaultBrush" Color="#5A5A5A"/>
    <SolidColorBrush x:Key="NavTextHoverBrush" Color="#000000"/>
    <SolidColorBrush x:Key="NavTextSelectedBrush" Color="#4C3B87"/>
    <SolidColorBrush x:Key="NavIconHoverBackground" Color="#EDEBFA"/>
    <SolidColorBrush x:Key="NavIconCheckedBackground" Color="#DBD5F2"/>

    <!--====== RecordCard 卡片 ======-->
    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBorder" Color="#D6D7E0"/>
    <SolidColorBrush x:Key="CardText" Color="#333444"/>
    <SolidColorBrush x:Key="TagBackground" Color="#F0F1F8"/>
    <SolidColorBrush x:Key="TagText" Color="#7B7C92"/>

    <!--====== 图表主色调 ======-->
    <SolidColorBrush x:Key="ChartLine1" Color="#6C63FF"/>
    <SolidColorBrush x:Key="ChartLine2" Color="#29D3B1"/>
    <SolidColorBrush x:Key="ChartLine3" Color="#FFB845"/>

    <!--====== 饼图配色板 ======-->
    <SolidColorBrush x:Key="Pie1" Color="#7C89FF"/>
    <SolidColorBrush x:Key="Pie2" Color="#4CD9C0"/>
    <SolidColorBrush x:Key="Pie3" Color="#FFC372"/>
    <SolidColorBrush x:Key="Pie4" Color="#BFA9A0"/>
    <SolidColorBrush x:Key="Pie5" Color="#A18AFF"/>

    <!--====== 卡片阴影（轻柔浮起） ======-->
    <DropShadowEffect x:Key="CardShadow" 
                      BlurRadius="12" 
                      ShadowDepth="4" 
                      Color="#1A000000" 
                      Direction="270"/>

    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#222"/>
    </Style>
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#555"/>
    </Style>
    <CornerRadius x:Key="CardCornerRadius">16</CornerRadius>

    <!-- 颜色定义 -->
    <Color x:Key="PrimaryColor">#FFFFFF</Color>
    <Color x:Key="SecondaryColor">#F5F5F5</Color>
    <Color x:Key="TextPrimaryColor">#333333</Color>
    <Color x:Key="TextSecondaryColor">#666666</Color>
    <Color x:Key="AccentColor">#007ACC</Color>

    <!-- 画刷定义 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>


    <!--主界面 新增-->
    <SolidColorBrush x:Key="LightAccentBrush" Color="#FFE0E0E0"/>
    
    <!-- 图标资源 -->
    <BitmapImage x:Key="MenuIcon" UriSource="/Assets/hamburger.png"/>
    <BitmapImage x:Key="HomeIcon" UriSource="/Assets/Home_light.png"/>
    <BitmapImage x:Key="AnalyticsIcon" UriSource="/Assets/analytics.png"/>
    <BitmapImage x:Key="ThemeIcon" UriSource="/Assets/DaylightMode.png"/>
    <BitmapImage x:Key="AvatarIcon" UriSource="/Assets/UserAvatar.png"/>

    <BitmapImage x:Key="OptionIcon" UriSource="/Assets/OptionHorizontal.png"/>
    <BitmapImage x:Key="CreateIcon" UriSource="/Assets/UilPlus.png"/>

    <BitmapImage x:Key="MoodIcon" UriSource="/Assets/mood.png"/>
    <BitmapImage x:Key="MusicIcon" UriSource="/Assets/music.png"/>
    <BitmapImage x:Key="LinkIcon" UriSource="/Assets/link.png"/>
    <BitmapImage x:Key="TimeIcon" UriSource="/Assets/time.png"/>
    <BitmapImage x:Key="SearchIcon" UriSource="/Assets/NimbusSearch.png"/>
    <BitmapImage x:Key="RandomButton" UriSource="/Assets/RandomFill.png"/>

</ResourceDictionary>