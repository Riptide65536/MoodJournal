<Application x:Class="MoodTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MoodTracker"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- 基础色系 -->
        <Color x:Key="BaseContainer">#22243B</Color>
        <Color x:Key="ContentBase">#1A1A2E</Color>
        <Color x:Key="AccentViolet">#6C5B7B</Color>
        <!-- 新增强调色 -->

        <!-- 渐变系统 -->
        <LinearGradientBrush x:Key="ContainerGlow" StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#333652" Offset="0"/>
            <!-- 顶部光晕 -->
            <GradientStop Color="{StaticResource BaseContainer}" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ContentSurface" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A1A2E" Offset="0"/>
            <GradientStop Color="#212239" Offset="1"/>
            <!-- 增加微妙纹理感 -->
        </LinearGradientBrush>

        <!-- 动态效果颜色 -->
        <Color x:Key="HoverGlow">#406C5B7B</Color>

        <!-- 全局投影 -->
        <DropShadowEffect x:Key="DepthShadow"
                  BlurRadius="20"
                  ShadowDepth="4"
                  Color="#20000000"
                  Direction="-90"/>
        
        <!-- 标题栏样式 -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ECEFF1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        Opacity="0.8">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1AFFFFFF"/>
                                <Setter Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 智能分隔线 -->
        <Style TargetType="Rectangle">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" 
                            ShadowDepth="0" 
                            Color="#20000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!--导航栏按钮文字颜色-->
        <SolidColorBrush x:Key="NavTextDefaultBrush" Color="#B0B3C5"/>
        <SolidColorBrush x:Key="NavTextHoverBrush" Color="#D8D9F0"/>
        <SolidColorBrush x:Key="NavTextSelectedBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="NavIconHoverBackground" Color="#2A2C45"/>
        <SolidColorBrush x:Key="NavIconCheckedBackground" Color="#3C3E5A"/>


        <!--导航栏按钮展示-->
        <Style x:Key="NavButtonStyle" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="{StaticResource NavTextDefaultBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border"
                        Background="{TemplateBinding Background}"
                        CornerRadius="10"
                        Padding="8"
                        SnapsToDevicePixels="True">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource NavIconHoverBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource NavTextHoverBrush}"/>
                            </Trigger>

                            <!-- Checked -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource NavIconCheckedBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource NavTextSelectedBrush}"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#70738A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- 布尔转可见性 -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        
        <!--RecordCard-->
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <Style x:Key="RecordCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" 
                              Color="Black" 
                              ShadowDepth="2" 
                              Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>




        <!-- 卡片颜色系统 -->
        <!-- 主背景 -->
        <Color x:Key="CardBorder">#2D2F4A</Color>
        <!-- 边框 -->
        <Color x:Key="CardText">#D0D3FF</Color>
        <!-- 标题文字 -->
        <Color x:Key="TagBackground">#2C2E47</Color>
        <!-- 标签背景 -->
        <Color x:Key="TagText">#AEB1D9</Color>
        <!-- 标签文字 -->

        <!-- 投影效果 -->
        <DropShadowEffect x:Key="CardShadow" 
                 BlurRadius="16" 
                 ShadowDepth="4" 
                 Color="#40000000" 
                 Direction="270"/>


        <!-- 在App.xaml中定义图表资源 -->
        <Color x:Key="ChartLine1">#5C6BC0</Color>
        <!-- 主色蓝紫 -->
        <Color x:Key="ChartLine2">#26A69A</Color>
        <!-- 辅助色青绿 -->
        <Color x:Key="ChartLine3">#FFA726</Color>
        <!-- 强调色琥珀 -->

        <!-- 饼图色板 -->
        <Color x:Key="Pie1">#7986CB</Color>
        <Color x:Key="Pie2">#4DB6AC</Color>
        <Color x:Key="Pie3">#FFB74D</Color>
        <Color x:Key="Pie4">#A1887F</Color>
        <Color x:Key="Pie5">#9575CD</Color>

    </Application.Resources>
</Application>
